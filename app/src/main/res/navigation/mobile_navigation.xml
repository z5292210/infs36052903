    app:startDestination="@+id/navigation_home">

    <fragment
        android:id="@+id/navigation_home"
        android:name="com.student.greentrail.ui.home.HomeFragment"
        android:label="@string/title_home"
        tools:layout="@layout/fragment_home" />
    <fragment
        android:id="@+id/navigation_maps"
        android:name="com.student.greentrail.ui.Maps.MapsFragment"
        android:label="@string/title_map"
        tools:layout="@layout/fragment_maps" />
    <fragment
        android:id="@+id/navigation_qrcode"
        android:name="com.student.greentrail.ui.qrcode.QRCodeFragment"
        android:label="@string/title_qrcode"
        tools:layout="@layout/fragment_qrcode" />

    <fragment
        android:id="@+id/navigation_plant"
